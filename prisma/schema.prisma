  @@index([sourceSystem])
  @@index([isEmergencyChange])
  @@index([voicedriveDeactivationId])
  @@index([changedAt])
  @@index([approvedBy])
  @@map("employee_account_status_history")
}

// ============================================
// Phase 2.5: SystemMonitorPage連携強化
// Webhook送信統計・面談完了統計API実装
// ============================================

// Webhook送信ログテーブル
model WebhookSendLog {
  id               String    @id @default(cuid())
  eventType        String    @map("event_type")        // 'employee.created', 'interview.completed'等
  eventTimestamp   DateTime  @map("event_timestamp")   // イベント発生時刻
  sentAt           DateTime  @map("sent_at")           // 送信時刻
  staffId          String?   @map("staff_id")          // 関連職員ID
  requestId        String?   @unique @map("request_id") // リクエストID（VoiceDrive連携用）
  payloadSize      Int       @map("payload_size")      // ペイロードサイズ（bytes）
  status           WebhookSendStatus                    // 'success', 'failed', 'timeout'
  httpStatusCode   Int?      @map("http_status_code")  // HTTPステータスコード
  processingTime   Int       @map("processing_time")   // 処理時間（ms）
  errorMessage     String?   @map("error_message")     // エラーメッセージ
  retryCount       Int       @default(0) @map("retry_count") // リトライ回数
  lastRetryAt      DateTime? @map("last_retry_at")     // 最終リトライ時刻
  responseBody     String?   @map("response_body")     // レスポンスボディ（JSON）
  createdAt        DateTime  @default(now()) @map("created_at")

  @@index([eventType])
  @@index([sentAt])
  @@index([status])
  @@index([staffId])
  @@map("webhook_send_logs")
}

enum WebhookSendStatus {
  SUCCESS @map("success")
  FAILED  @map("failed")
  TIMEOUT @map("timeout")
}

// Webhookリトライキューテーブル
model WebhookRetryQueue {
  id                 String           @id @default(cuid())
  originalLogId      String           @map("original_log_id") // 元のwebhook_send_logsのID
  eventType          String           @map("event_type")
  payload            Json                                     // リトライ用のペイロード
  retryAttempt       Int              @default(0) @map("retry_attempt") // 現在のリトライ回数
  maxRetries         Int              @default(3) @map("max_retries")   // 最大リトライ回数
  nextRetryAt        DateTime         @map("next_retry_at")   // 次回リトライ予定時刻
  status             RetryQueueStatus @default(PENDING)
  lastError          String?          @map("last_error")      // 最後のエラーメッセージ
  createdAt          DateTime         @default(now()) @map("created_at")
  updatedAt          DateTime         @updatedAt @map("updated_at")

  @@index([status, nextRetryAt])
  @@index([originalLogId])
  @@map("webhook_retry_queue")
}

enum RetryQueueStatus {
  PENDING    @map("pending")
  PROCESSING @map("processing")
  COMPLETED  @map("completed")
  FAILED     @map("failed")
}