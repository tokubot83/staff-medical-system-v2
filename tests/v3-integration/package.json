{
  "name": "v3-integration-tests",
  "version": "1.0.0",
  "description": "VoiceDrive V3異議申立システム統合テスト",
  "scripts": {
    "test": "node run-tests.js",
    "test:jest": "jest voicedrive-appeal-test.ts",
    "test:all": "npm run test && npm run test:jest"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "node-fetch": "^3.3.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/*.test.ts", "**/*-test.ts"],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/../../src/$1"
    }
  }
}